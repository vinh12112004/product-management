extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.mb-3 
        .row 
            .col-12
                +box-head("Danh sach san pham")
        
        .row 
            each item in products
                .col-4.mb-3 
                    .product-item 
                        .inner-image 
                            img(
                                src = item.thumbnail
                                alt =  item.title 
                            )
                        .inner-content 
                            h3.inner-title #{item.title}
                            .inner-price-new #{item.priceNew} $
                            .inner-price-ole #{item.price}$
                            .inner-discount -#{item.discountPercentage}%
